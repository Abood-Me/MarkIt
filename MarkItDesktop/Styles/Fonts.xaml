<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=netstandard">

    <FontFamily x:Key="JosefinRegular">pack://application,,,/Fonts/#Josefin Sans Regular</FontFamily>
    <FontFamily x:Key="JosefinLight">pack://application,,,/Fonts/#Josefin Sans Light</FontFamily>
    <FontFamily x:Key="JosefinBold">pack://application,,,/Fonts/#Josefin Sans Bold</FontFamily>

    <sys:Double x:Key="FontSizeXLarge">32</sys:Double>
    <sys:Double x:Key="FontSizeLarge">24</sys:Double>
    <sys:Double x:Key="FontSizeRegular">20</sys:Double>
    <sys:Double x:Key="FontSizeSmall">18</sys:Double>
    <sys:Double x:Key="FontSizeXSmall">16</sys:Double>
</ResourceDictionary>