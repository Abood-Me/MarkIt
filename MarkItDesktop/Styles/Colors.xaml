<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#0041A3</Color>
    <Color x:Key="BackgroundColor">#FFF</Color>
    <Color x:Key="BackgroundDimColor">#B5B5B5</Color>
    <Color x:Key="BackgroundDarkColor">#555555</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundDimBrush" Color="{StaticResource BackgroundDimColor}" />
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}" />
</ResourceDictionary>