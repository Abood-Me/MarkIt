<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#0041A3</Color>
    <Color x:Key="PrimaryLightColor">#1155CC</Color>
    <Color x:Key="PrimaryDarkColor">#0022AA</Color>
    <Color x:Key="InvalidColor">#FF4040</Color>
    <Color x:Key="BackgroundColor">#FFF</Color>
    <Color x:Key="BackgroundDimColor">#CCC</Color>
    <Color x:Key="BackgroundDarkColor">#999</Color>
    <Color x:Key="ForegroundColor">#000</Color>
    <Color x:Key="ForegroundLightColor">#444</Color>

    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="InvalidBrush" Color="{StaticResource InvalidColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLightColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundDimBrush" Color="{StaticResource BackgroundDimColor}" />
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}" />
</ResourceDictionary>