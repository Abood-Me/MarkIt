<local:AnimatedControl x:Class="MarkItDesktop.Views.Controls.EditHint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarkItDesktop.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10 10 0 0"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Padding="40 10"
                Background="{StaticResource ForegroundLightBrush}">
        <TextBlock Foreground="{StaticResource BackgroundBrush}"
                       FontFamily="{StaticResource JosefinLight}"
                       FontSize="{StaticResource FontSizeSmall}"
                       Text="Press escape to exit editing ..."/>
    </Border>
</local:AnimatedControl>
