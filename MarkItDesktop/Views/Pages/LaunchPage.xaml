<local:BasePage x:Class="MarkItDesktop.Views.LaunchPage"
                x:TypeArguments="vm:LaunchViewModel"
                  xmlns:vm="clr-namespace:MarkItDesktop.ViewModels"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:MarkItDesktop.Views"
                  mc:Ignorable="d"
                d:Height="600"
                d:Width="900">
    <Grid>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource PrimaryBrush}"
                Padding="40 10">
            <StackPanel>
                
                <TextBlock Text="Loading ..."
                           Foreground="{StaticResource BackgroundBrush}"/>
                
            </StackPanel>
        </Border>     
    </Grid>
</local:BasePage>
